SELECT
--VE.ERR_CREACION,
--TO_CHAR(VE.ID_MUESTREO),
--TO_CHAR(VE.ID_MUESTRA),
VE.FECHA,
VE.ANO,
VE.MES,
VE.ESTACION,
VE.ID_ESTACION,
VE.PARCELA,
VE.SUBPARCELA,
VE.AREA_SUBPARCELA,
VE.NUM_SUBPARCELAS,
VE.DES_PARCELA,
VE.SECTOR,
VE.UAC,
VE.UNIDAD_DE_MANEJO,
VE.REGION,
VE.DEPARTAMENTO,
--VE.ID_REGION,
--VE.ID_UAC,
--VE.ID_DEPARTAMENTO,
CT.PATH_LUGAR,
--VE.ID_SECTOR,
--VE.ID_UNIDAD_DE_MANEJO,

--VE.ID_PARCELA,
--VE.ID_ARBOL,
VE.TAG_ARBOL,
VE.ESPECIE,
VE.ESTADO_ARBOL,
VE.TIPO,
VE.ALTURA,
VE.CAP,
VE.DAP
--VE.ID_ESTADO_ARBOL,
--VE.ID_TIPO,
--VE.ID_ESPECIE,
--VE.NOTAS,
FROM   
    V_2021_ARGOS_ESTRUCTURA VE
JOIN 
    GEOGRAFICOS.CLOCALIDADT CT ON VE.ID_ESTACION = CT.ID_ESTACION   
WHERE
    VE.ID_ESTACION IN ( SELECT ID_ESTACION FROM GEOGRAFICOS.CLOCALIDADT WHERE  PATH_CODIGO LIKE '%UAC-SAI%') 
    ORDER BY VE.ANO ASC



